<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.praneethguduguntla.medic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/MedicTheme" />
        <activity android:name=".MainActivity" />
        <activity android:name=".DoctorSignUpActivity" />
        <activity android:name=".PatientSignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientView" />
        <activity android:name=".PatientSchedulingActivity" />

        <receiver android:name=".AlarmReceiver" />

        <activity
            android:name=".YesOrNo"
            android:label="@string/title_activity_yes_or_no"
            android:theme="@style/AppTheme" />
        <activity android:name=".MessagingActivity"></activity>
    </application>

</manifest>