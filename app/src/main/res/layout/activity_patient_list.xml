<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PatientListActivity">

    <TextView
            android:id="@+id/WelcomeDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:lineSpacingExtra="-10sp"
            android:text="Welcome,"
            android:textColor="@color/colorPrimary"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/nameDoc"/>
    <TextView
            android:id="@+id/nameDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_bold"
            android:lineHeight="5dp"
            android:text="XXX"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/patientList" android:layout_marginEnd="278dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/WelcomeDoc"/>
    <ListView
            android:layout_width="350dp"
            android:layout_height="350dp" android:id="@+id/patientList"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/nameDoc" android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp">
    </ListView>
    <TextView
            android:text="Code:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code" android:fontFamily="@font/proxima_nova_black"
            android:textColor="#ffffff" android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="118dp"
            app:layout_constraintBottom_toTopOf="@+id/patientList" android:layout_marginEnd="89dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="31dp"
            app:layout_constraintStart_toEndOf="@+id/WelcomeDoc"/>

</android.support.constraint.ConstraintLayout>