<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PatientListActivity">

    <TextView
        android:id="@+id/WelcomeDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:lineSpacingExtra="-10sp"
        android:text="Welcome,"
        android:textColor="@color/colorPrimary"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:lineHeight="5dp"
        android:text="XXX"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/patientList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeDoc" />

    <ListView
        android:id="@+id/patientList"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ListView>

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/proxima_nova_black"
        android:text="Code:"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/patientList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/reloadList"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="73dp"
        android:text="R"
        app:layout_constraintBottom_toTopOf="@+id/code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/WelcomeDoc"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>